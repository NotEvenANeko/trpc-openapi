{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": false,
    "verbatimModuleSyntax": true,
    "removeComments": false,
    "noUncheckedIndexedAccess": true
  },
  "include": ["src", "test", "tsup.config.ts"]
}
